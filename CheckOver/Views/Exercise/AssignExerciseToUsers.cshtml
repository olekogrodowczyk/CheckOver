@model CheckOver.Models.ViewModels.AssignExerciseVM
@{
    ViewData["Title"] = "AssignExerciseToUsers";
}

<section id="logowanie">
    <div class="wrapper">
        <header class="center">
            <div class="tytul">
                <h3>Dodaj zadanie</h3>
            </div>
        </header>
        <main class="page-body">
            <div class="container">
                <form enctype="multipart/form-data" asp-action="AssignExerciseToUsers" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="input-box-small">
                        <p>Termin oddania:</p>
                        <input asp-for="DeadLineString" id="datepicker" type="text" data-val="true" data-val-required="The Czas uko&#x144;czenia field is required." name="DeadLineString" value="" />
                    </div>
                    @if (Model.Exercise.Arguments != null && Model.Exercise.Arguments != null)
                    {
                        <div class="input-checkbox">
                            <div class="detail">
                                <input asp-for="Configuration" type="checkbox">
                                <label for="Automatyczne sprawdzanie">Automatyczne sprawdzanie</label>
                            </div>
                        </div>
                    }
                    <div class="container-btn">
                        <span class="text-danger field-validation-valid" data-valmsg-for="DeadLineString" data-valmsg-replace="true"></span>
                        <input type="submit" value="Przydziel zadanie" />
                    </div>

                    <input name="__RequestVerificationToken" type="hidden" value="CfDJ8H4j3eNZYedPjnlQmy4M_Oi6is4k7OXULZhiEuLticW6P4gbRemd7Ar8-3L81YxK23Q0tulewwBUn7PypLusULbyKzes1DbtkPRJAJuCSuU7NVVhH69T1_ACBtOs6xs0a30Rqqncn64s4Io_YBP6l0rhVp1iqBWS-b8WK_nszN6keU-Vt7_PzZ6ohKgRDd71xg" />
                </form>
            </div>
        </main>
    </div>
</section>

@section Scripts
    {
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap-grid.css" />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <script>
        $('#datepicker').datetimepicker({
            uiLibrary: 'bootstrap4',
            modal: true,
            footer: true,
            format: 'dd-mm-yyyy HH:MM',
        });
    </script>
}