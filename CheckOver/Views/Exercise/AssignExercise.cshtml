@model IEnumerable<Group>
@{
    ViewData["Title"] = "Assign";
}

<div class="row p-4">
    @{
        foreach (var item in Model)
        {
            <div class="col-sm-3 mt-3">
                <div class="card" style="width: 20rem;">
                    <img class="card-img-top" src="https://checkoverblob.blob.core.windows.net/checkoverblob/@item.CoverImageUrl" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Założyciel: @item.Creator.FirstName @item.Creator.LastName</p>
                        <a asp-controller="Exercise" asp-action="AssignExerciseToUsers" asp-route-Groupid="@item.GroupId" asp-route-ExerciseId="@ViewBag.ExerciseId" class="btn btn-primary">Przejdź do grupy</a>
                    </div>
                </div>
            </div>
        }
    }
</div>