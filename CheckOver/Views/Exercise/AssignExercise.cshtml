@model IEnumerable<Group>
@{
    ViewData["Title"] = "Assign";
}

<section id="przydzielenie_zadania_grupa">
    <div class="wrapper">
        <header>
            <div class="tytul">
                <h3>Wybierz grupę</h3>
            </div>
        </header>
        <main class="page-body">

            <div class="container">
                @foreach (var item in Model)
                {
                    <a asp-controller="Exercise" asp-action="AssignExerciseToUsers" asp-route-Groupid="@item.GroupId" asp-route-ExerciseId="@ViewBag.ExerciseId">
                        <div class="item_block">
                            <div class="container_img">
                                <img src="~/@item.CoverImageUrl" alt="">
                            </div>
                            <p>Programowanie Python</p>
                        </div>
                    </a>
                }
            </div>
        </main>
    </div>
</section>