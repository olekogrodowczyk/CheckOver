@model CheckOver.Models.ViewModels.MakeOrUpdateExerciseVM

<div class="container-login100">
    <div class="wrap-login100">
        <div class="login100-more" style="background-image: url('images/group.jpg');"></div>
        <form asp-action="UpdateExercise" enctype="multipart/form-data" class="login100-form validate-form">
            <span class=" login100-form-title p-b-34 text-dark">
                Edytowanie zadania
            </span>
            <div class="col-12 mb-4">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" type="text" class="form-control" id="inputAddress" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="col-12 mb-4">
                <label asp-for="Description" class="form-label"></label>
                <textarea rows="5" asp-for="Description" type="text" class="form-control" id="inputAddress"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-12 mb-4">
                <label asp-for="MaxPoints" class="form-label"></label>
                <input asp-for="MaxPoints" type="text" class="form-control" />
                <span asp-validation-for="MaxPoints" class="text-danger"></span>
            </div>
            <div class="container-login100-form-btn mt-4">
                <button class="login100-form-btn">
                    Edytuj zadanie
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts
    {

    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <script>
        $('#datepicker').datetimepicker({
            uiLibrary: 'bootstrap4',
            modal: true,
            footer: true,
            format: 'dd-mm-yyyy HH:MM',
        });
    </script>
}