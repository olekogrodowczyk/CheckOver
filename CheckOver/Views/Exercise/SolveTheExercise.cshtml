@model CheckOver.Models.ViewModels.SolvedExerciseVM
@{
    ViewData["Title"] = "SolveTheExercise";
}

<div class="container-fluid p-5 p-l-100">
    <h2 class="mt-3 font-weight-bold">@Model.Solving.Exercise.Title</h2>
    <h4 class="mt-3 font-weight-bold">@Model.Solving.Assignment.Group.Name</h4>
    <h5 class="font-weight-bold mt-4">Termin zamknięcia zadania: @Model.Solving.Exercise.DeadLine</h5>

    <p class="mt-4 mb-3 font-weight-bold">@Model.Solving.Exercise.Description</p>
    <form asp-action="SolveTheExercise" method="post">
        <textarea asp-for="@Model.Answer" id="editor">
            &lt;p&gt;Umieść tutaj rozwiązanie zadania.&lt;/p&gt;
        </textarea>
        <span asp-validation-for="@Model.Answer" class="text-danger"></span>
        <div class="container-login100-form-btn m-t-25">
            <button class="login100-form-btn">
                Prześlij
            </button>
        </div>
    </form>
</div>

@section Scripts
{
    <script src="https://cdn.ckeditor.com/ckeditor5/27.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}  