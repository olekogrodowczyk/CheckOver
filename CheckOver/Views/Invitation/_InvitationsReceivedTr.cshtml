@model Invitation
<td>@Model.Sender.FirstName @Model.Sender.LastName</td>
<td>@Model.Group.Admin.FirstName @Model.Group.Admin.LastName</td>
<td>@Model.Group.Name</td>
<td>@Model.Role.Name</td>
<td>@Model.Status</td>
<td>@Model.CreationDate</td>
<td>
    @if (Model.Status == "Oczekujące")
    {
        <div class="btn-group">
            <a asp-controller="Invitation" asp-action="AcceptInvitation" asp-route-id="@Model.Id" class="btn btn-primary mr-4">Zaakceptuj</a>
            <a class="btn btn-primary">Odrzuć</a>
        </div>
    }
    else
    {
        <span>-</span>
    }
</td>