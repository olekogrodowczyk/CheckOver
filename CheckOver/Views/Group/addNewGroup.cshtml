@model MakeGroupVM

<div class="container-login100">
    <div class="wrap-login100">
        <div class="login100-more" style="background-image: url('images/group.jpg');"></div>
        <form asp-action="AddNewGroup" enctype="multipart/form-data" class="login100-form validate-form">
            <div class="m-t-5 m-b-5 text-danger" asp-validation-summary="All"></div>
            <span class=" login100-form-title p-b-34 text-dark">
                Tworzenie grupy
            </span>
            <div class="col-12 mb-4">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" type="text" class="form-control" id="inputAddress" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="CoverPhoto" class="form-label"></label>
                <div class="custom-file">
                    <input asp-for="CoverPhoto" class="custom-file-input" id="customFile" />
                    <label class="custom-file-label mt-0" for="customFile">Wybierz zdjęcie</label>
                </div>
                <span asp-validation-for="CoverPhoto" class="text-danger"></span>
            </div>
            <div class="container-login100-form-btn mt-4">
                <button class="login100-form-btn">
                    Stwórz grupę
                </button>
            </div>
        </form>
    </div>
</div>

<div id="dropDownSelect1"></div>