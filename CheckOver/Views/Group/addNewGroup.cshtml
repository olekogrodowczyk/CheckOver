@model CheckOver.Models.MakeGroupModel

<div class="container-login100">
    <div class="wrap-login100">
        <div class="login100-more" style="background-image: url('images/group.jpg');"></div>
        <form asp-action="AddNewGroup" class="login100-form validate-form">

            <span class="login100-form-title p-b-34 text-dark">
                Tworzenie grupy
            </span>
            <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type user name">
                <input asp-for="Name" id="first-name" class="input100" placeholder="Nazwa">
                <span class="focus-input100"></span>
            </div>           
            <div class="container-login100-form-btn">
                <button class="login100-form-btn">
                    Stwórz grupę
                </button>
            </div>
            <div class="m-t-5 m-b-5 text-danger" asp-validation-summary="ModelOnly"></div>

        </form>
    </div>
</div>

<div id="dropDownSelect1"></div>

