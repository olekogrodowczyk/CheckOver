@model SignInVM

<div class="container-login100">
    <div class="wrap-login100">
        <div class="login100-more" style="background-image: url('images/loginPicture.jpg');"></div>
        <form asp-action="SignIn" class="login100-form validate-form">

            <span class="login100-form-title p-b-34 text-dark">
                Logowanie
            </span>
            <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type user name">
                <input asp-for="Email" id="first-name" class="input100" placeholder="Adres e-mail">
                <span class="focus-input100"></span>
            </div>
            <div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20" data-validate="Type password">
                <input asp-for="Password" class="input100" placeholder="Hasło">
                <span class="focus-input100"></span>
            </div>

            <div class="container-login100-form-btn">
                <button class="login100-form-btn">
                    Zaloguj się
                </button>
            </div>
            <div class="m-t-5 m-b-5 text-danger" asp-validation-summary="All"></div>

            <div class="w-full text-center m-t-25">
                <span class="txt1">
                    Nie pamiętasz
                </span>

                <a href="#" class="txt2">
                    hasła?
                </a>
            </div>
        </form>
    </div>
</div>

<div id="dropDownSelect1"></div>